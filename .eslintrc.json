{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2017,
        "sourceType": "module",
        "vueFeatures": {
            "filter": true,
            "interpolationAsNonHTML": false
        }
    },
    "extends": ["plugin:vue/vue3-recommended", "eslint:recommended"],
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "double"],
        "indent": ["off"],
        "vue/script-indent": ["warn", 4],
        "vue/html-indent": ["warn", 4]
    }
}